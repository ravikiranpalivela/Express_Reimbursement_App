                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_margin="@dimen/_4dp"
                            android:layout_weight="2"
                            android:padding="@dimen/_4dp"
                            android:text="@string/advance_amount"
                            android:textColor="@color/white"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <ImageButton
                            android:id="@+id/iv_add_advance_amount"
                            android:layout_width="@dimen/_50dp"
                            android:layout_height="@dimen/_50dp"
                            android:layout_gravity="center"
                            android:layout_margin="@dimen/_4dp"
                            android:visibility="visible"
                            android:src="@drawable/ic_baseline_add_24" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_add_advance_amount"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/_4dp"
                        android:orientation="horizontal"
                        android:visibility="gone"
                        android:weightSum="3">

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/edtl_advance_amount"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:layout_weight="2"
                            android:hint="@string/advance_amount"
                            app:boxStrokeWidth="2dp"
                            app:counterEnabled="true"
                            app:counterMaxLength="20"
                            app:errorEnabled="true"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/edtl_client_contact_name">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/edt_advance_amount"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:backgroundTint="@color/white"
                                android:gravity="start"
                                android:inputType="numberDecimal" />

                        </com.google.android.material.textfield.TextInputLayout>

                        <Button
                            android:id="@+id/btn_add_advance_amount"
                            style="@style/stlTxtSubmit"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:background="@drawable/btn_background"
                            android:text="@string/submit"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/linearLayout2" />

                    </LinearLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_advance_amount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_4dp"
                        android:padding="@dimen/_4dp" />

                    <com.airbnb.lottie.LottieAnimationView
                        android:id="@+id/av_advance_amount"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        app:lottie_autoPlay="true"
                        app:lottie_loop="true"
                        app:lottie_rawRes="@raw/noresultanim" />

